<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="bower_components/bootstrap-css/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/index.css">
    <title>Lagersoft JS Lab</title>
</head>

<body>
    <div id="root" class="container">
      <div class="row alert alert-info">
        <div class="col-sm-2">
          <img class="img-responsive" src="img/lagerlogo.png" alt="">
        </div>
        <div class="col-sm-10">
          <h1>Javascript Lab</h1>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <h1 class="secondary-title">Experiments</h1>
        </div>
      </div>
      <div class="row experiment-list">
        <% experiments.forEach(function(exp) { %>
          <a href="/experiment/<%= exp.id %>">
            <div class="col-sm-12 experiment-item">
              <div class="col-sm-3">
                <img class="img-responsive img-circle experiment-image" src="<%= exp.image %>" alt="">
              </div>
              <div class="col-sm-2 experiment-title-container">
                <h3 class="experiment-title"><%= exp.name %></h3>
              </div>
              <div class="col-sm-7">
                <h4 class="experiment-description"><%= exp.description %></h4>
              </div>
            </div>
          </a>
          <div class="col-sm-12">
            <table>
              <tbody>
                <tr>
                  <td>devs:</td>
                  
                  <% exp.devs.forEach(function(dev){ %>
                    <td>
                      <h4><span class="label label-primary"><%= dev %></span></h4>
                    </td>
                  <% }); %>

                </tr>
              </tbody>
            </table>
          </div>
        <% }); %>
      </div>
    </div>
    <script src="js/main.js"></script>
</body>

</html>
